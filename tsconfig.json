{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2017",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "typings/*"
          ],
          "shell-quote": ["src/typings/shell-quote"],
          "high-res-timeout": ["src/typings/high-res-timeout"],
      }
  },
  "include": [
      "src/**/*"
  ]
}